{
  "compilerOptions": {
    "target": "ESNext",              // Usando o ESNext para recursos modernos
    "module": "commonjs",            // Manter o CommonJS para compatibilidade
    "moduleResolution": "node",      // Usar resolução de módulos no estilo Node.js
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "*": ["node_modules/*", "../server/src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
